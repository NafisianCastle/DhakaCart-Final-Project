# Snyk (https://snyk.io) policy file, patches or ignores known vulnerabilities.
version: v1.25.0

# Language settings
language-settings:
  javascript:
    # Ignore dev dependencies in production scans
    ignore-dev-deps: true

# Patch settings
patch: {}

# Ignore specific vulnerabilities (with justification and expiry)
ignore:
  # Example: Ignore a specific vulnerability in a dev dependency
  # SNYK-JS-LODASH-567746:
  #   - '*':
  #       reason: 'This vulnerability is in a dev dependency and does not affect production'
  #       expires: '2024-12-31T23:59:59.999Z'

# Exclude paths from scanning
exclude:
  global:
    - '**/*.test.js'
    - '**/*.spec.js'
    - '**/test/**'
    - '**/tests/**'
    - '**/__tests__/**'
    - '**/coverage/**'
    - '**/node_modules/**'
    - '**/build/**'
    - '**/dist/**'
    - '**/*.md'
    - '**/*.txt'

# Severity threshold
severity-threshold: high

# Fail on specific conditions
fail-on:
  - upgradable
  - patchable